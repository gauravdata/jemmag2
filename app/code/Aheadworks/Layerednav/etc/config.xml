<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <aw_layerednav>
            <general>
                <enable_ajax>0</enable_ajax>
                <display_stock>1</display_stock>
                <display_sales>1</display_sales>
                <display_new>1</display_new>
                <disable_popover>1</disable_popover>
                <enable_price_slider>0</enable_price_slider>
                <price_slider_behaviour_mode>1</price_slider_behaviour_mode>
                <hide_empty_attribute_values>0</hide_empty_attribute_values>
                <filter_display_state>1</filter_display_state>
                <filter_values_display_limit>9</filter_values_display_limit>
                <filter_mode>multi-select</filter_mode>
            </general>
            <seo>
                <seo_friendly_url>default</seo_friendly_url>
                <disable_indexing_on_catalog_search>1</disable_indexing_on_catalog_search>
                <redirect_for_old_urls>0</redirect_for_old_urls>
                <page_meta_title_template><![CDATA[{{var category.name}} {{for filter in urls.getAllFilters()}} {{var filter.name}} {{var filter.value}}, {{/for}}]]></page_meta_title_template>
                <page_meta_description_template><![CDATA[{{var category.metatitle}} {{for filter in urls.getAllFilters()}} {{var filter.name}} {{var filter.value}}, {{/for}}]]></page_meta_description_template>
                <rewrite_meta_robots_tag>0</rewrite_meta_robots_tag>
                <add_canonical_urls>0</add_canonical_urls>
            </seo>
        </aw_layerednav>
    </default>
</config>
